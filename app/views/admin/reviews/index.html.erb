<%= flash[:notice] %>

<div class="container-fluid index-body">
  <div class="row" >
    <div class="col-md-12">
      <div class="mx-auto">
        <div class="row row-cols-3">
        <% @reviews.each do |review| %>
          <div class="col mb-3">
            <div class="card index-card text-bg-light">
              <div class="card-img basic-card-img">
                  <%= link_to admin_review_path(review.id) do %>
                    <%= image_tag review.get_beer_image(200,200), class: 'basic-card-img' %>
                    <p><small><%= review.name %></small></p>
                  <% end %>
                  <p class="card-body"><%= review.comment %></p>
                  <p class="card-body"><small>
                    reviewd by
                    <%= link_to admin_account_path(review.user.id) do%>
                      <%= review.user.name %>
                      <%= image_tag review.user.get_profile_image(50,50), class: 'profile-img' %>
                    <% end %>
                  </small></p>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @reviews %>
        </div>
      </div>
    </div>
  </div>
</div>