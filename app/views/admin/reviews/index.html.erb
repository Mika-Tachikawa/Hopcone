<%= flash[:notice] %>

<div class="container-fluid text-center" style="margin-top: 1rem;">
  <div class="row" >
    <div class="col-md-12">
      <div class="mx-auto">
        <div class="row row-cols-3">
        <% @reviews.each do |review| %>
        <div>
          <%= link_to admin_review_path(review.id) do %>
            <%= image_tag review.get_beer_image(150,150) %>
            <h3><%= review.name %></h3>
          <% end %>
            <p><%= review.comment %></p>
            <p><small>
              reviewd by
              <%= link_to admin_account_path(review.user.id) do%>
                <%= review.user.name %>
                <%= image_tag review.user.get_profile_image(50,50) %>
              <% end %>
            </small></p>
        </div>
        <% end %>
        <%= paginate @reviews %>
        </div>
      </div>
    </div>
  </div>
</div>