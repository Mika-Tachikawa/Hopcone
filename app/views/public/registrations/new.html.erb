<%= flash[:notice] %>



<div class="container-fluid text-center" style="margin-top: 10rem;">
  <div class="row" >
    <div class="mx-auto">
      <h2>Sign up</h2>

        <div class="card card.border-secondary text-bg-light" style="width: 40rem; height: 20rem;">
          <div class="card-body text-right" style="padding-right: 10rem; background-color:#fbf4d7">
            <%= form_with model: @user, url: user_registration_path do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :name %>
                <%= f.text_field :name %>
              </div>
              <div class="field">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="field">
                <%= f.label :Profileimage %>
                <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
              </div>
              <div class="field">
                <%= f.label :introduction %>
                <%= f.text_field :introduction %>
              </div>
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
              <div class="field">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
              <div class="actions">
                <%= f.submit "Sign up" %>
              </div>
            <% end %>
          </div>
        </div>
        <%= render "public/shared/links" %>

    </div>
  </div>
</div>