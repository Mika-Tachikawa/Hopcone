<%= flash[:notice] %>

<div class="container-fluid basic-form text-center">
  <div class="row" >
    <div class="mx-auto">
      
      <h2>Sign up</h2>

      <div class="card signup-card card.border-secondary text-bg-light">
        <div class="signup-card-body text-right">
          <%= form_with model: @user, url: user_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :name,"ユーザー名" %>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :email,"メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field">
              <%= f.label :Profileimage,"画像" %>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <div class="field">
              <%= f.label :introduction,"自己紹介" %>
              <%= f.text_area :introduction %>
            </div>
            <div class="field">
              <%= f.label :password,"パスワード" %>
              <% if @minimum_password_length %>
              <small><em>(<%= @minimum_password_length %> 文字以上)</em></small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation,"パスワード(再入力)" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>
        </div>
        <%= render "public/shared/links" %>
      </div>
      
    </div>
  </div>
</div>