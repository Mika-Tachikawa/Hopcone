<% if review.favorited_by?(current_user) %>

  <%= link_to review_favorite_path(review), method: :delete, class: "btn btn-warning" do %>
    <i class="fa-solid fa-beer-mug-empty" aria-hidden="true" style="color: red;"></i>
    <%= review.favorites.count %> 乾杯！
  <% end %>
<% else %>
  <%= link_to review_favorites_path(review), method: :post, class: "btn btn-warning" do %>
    <i class="fa-solid fa-beer-mug-empty" aria-hidden="true" style="color: white;"></i>
    <%= review.favorites.count %> 乾杯！
  <% end %>

<% end %>
