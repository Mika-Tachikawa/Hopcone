<div class="container-fluid basic-form text-center">
  <div class="row" >
    <div class="mx-auto">
      
      <h2>Log in</h2>

        <div class="card signin-card card.border-secondary text-bg-light">
          <div class="login-card-body text-right">
            <%= form_with model: @user, url: user_session_path do |f| %>
              <div class="field">
                <%= f.label :email,"メールアドレス" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="field">
                <%= f.label :password,"パスワード" %>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
              <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>
              <div class="actions">
                <%= f.submit "Log in" %>
              </div>
            <% end %>
          </div>
          <%= render "public/shared/links" %>
        </div>
        
    </div>
  </div>
</div>