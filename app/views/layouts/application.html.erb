  </head>

  <body class="d-flex flex-column vh-100" style="background-color:#fbf4d7">
    <%= render 'layouts/header' %>
      <main>
        <%= yield %>   
      </main>
    <%= render 'layouts/footer' %>
  </body>
  
</html>
